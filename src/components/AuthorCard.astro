---
const { author } = Astro.props;
const { name, role, bio } = author.data;

---

<footer class="border-t border-gray-200 dark:border-gray-700 mt-4 pt-4">
    <p class="text-lg font-bold text-gray-800 dark:text-gray-200 mb-2">{name}</p>
    <p class="text-sm text-gray-500 mb-2">{role}</p>
    <p class="text-sm text-gray-500">{bio}</p>
</footer>
