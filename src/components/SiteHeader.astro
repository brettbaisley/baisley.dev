---
const { pageTitle } = Astro.props
---
<header class="global-header">
    <a href="/">Brett</a>
    <button class="open-dialog">&#9776;</button>
</header>

<dialog class="dialog-menu"> 
    <button class="close-dialog">&times;</button>
    <nav class="site-navbar">
        <ul class="site-nav">
            <li><a href="/blog/">Blog</a></li>
            <li><a href="/about/">Days</a></li>
            <li><a href="/about/">Gifts</a></li>
            <li><a href="/about/">Top-Ten</a></li>
        </ul>
    </nav>
</dialog>

<style>
    .global-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background-color: var(--bg-surface);
    }

    .dialog-menu,
    .dialog-menu[open] {
        background-color: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(5px); 
        position: fixed;
        width: 400px;
        max-width: 70%;
        min-height: 100vh;
        margin: 0;
        margin-left: auto;
        transform: translateX(100%);
        transition: .3s;
    }

    .dialog-menu[open] {
        display: flex;
        flex-direction: column;
        margin: 0;
        margin-left: auto;
        transform: translateX(0);
        transition: .3s;
    }

    .open-dialog,
    .close-dialog {
        position: absolute;
        top: 12px;
        right: 20px;
        z-index: 1000;
        width: 2rem;
        height: 2rem;
        padding: 0;
        margin: 0;
        font-size: 2rem;
        line-height: 2rem;
        border-radius: 5px;
        background-color: transparent;
        color: gray;
        text-align: center; 
    }

    .site-nav {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        list-style: none;
        padding: 4rem 1rem;
        margin: 0;
    }
    .site-nav li {
        padding: 0;
        margin: 0;
    }

    .site-nav a {
        font-size: 1.125rem;
        display: block;
        width: 100%;
        cursor: pointer;
    }

</style>

<script>
    const dialog = document.querySelector('dialog');
    const buttonOpen = document.querySelector('.open-dialog');
    const buttonClose = document.querySelector('.close-dialog');

    if (buttonOpen) {
        buttonOpen.addEventListener('click', () => {
            if (dialog)
                dialog.showModal();
        });
    }

    if (buttonClose) {
        buttonClose.addEventListener('click', () => {
            if (dialog)
                dialog.close();
        });
    }

</script>