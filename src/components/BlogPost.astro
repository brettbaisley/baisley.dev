---
const { title, url, pubDate, text } = Astro.props
---
<li>
    <h2><a href={url}>{title}</a></h2>
    <span class="date">{pubDate.toLocaleDateString()}</span>
    <p class="text">{text.description}</p>
</li>


<style>
    li {
        background-color: var(--bg-surface);
        box-shadow: 0px 2px 4px 0px rgba(51, 55, 59, .08), 0px 1px 10px 0px rgba(51, 55, 59, .08);
        border-radius: 1rem;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.5s;

        @media (min-width: 700px) {
            padding: 2rem;
        }
    }

    .date {
        font-size: 1rem;
        color: #666;
    }

    .text {
        height: 100%;
    }
</style>