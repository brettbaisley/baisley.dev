---
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection } from "astro:content";
const authors = await getCollection("authors");
---
<MainLayout 
  title="Brett Baisley | Blog | Authors"
  heading="Authors"
  subheading="Bio pages of all authors of Brett's Blog."
>
{
    authors.map((author) => {
        return (
            <div class="mt-8">
                <p class="text-gray-800 dark:text-gray-200">{author.data.first_name} {author.data.last_name}</p>
                <p class="text-gray-500">{author.data.bio}</p>
            </div>
        );
    })
}
</MainLayout>