---
import '../styles/global.css';

import MainHead from '../components/MainHead.astro';
import SiteHeader from '../components/SiteHeader.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  heading: string;
  subheading: string;
}
const { title, heading, subheading } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-US" dir="ltr">
  <MainHead title={title}></MainHead>

  <body class="bg-white dark:bg-gray-950">
    <SiteHeader />
    <main class="container mx-auto p-4 py-12">
      { heading && <h1 class="text-5xl mb-4 tracking-tight font-extrabold text-black dark:text-white">{heading}</h1> }
      { subheading && <h2 class="text-xl text-gray-600 dark:text-gray-300">{subheading}</h2> }
      <slot />
    </main>
    <Footer />

  </body>
</html>